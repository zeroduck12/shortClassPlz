<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="User">
	
	<insert id="join" parameterType="userdto">
		INSERT INTO "USER" values(user_seq.nextval, #{userid}, #{userpw}, #{username}, #{userphone}, #{zipcode}, #{addr}, #{addrdetail}, #{addretc} )
	</insert>
	
	<select id="login" parameterType="hashmap" resultType="_int">
		SELECT count(*) FROM "USER" WHERE USERID = #{userid} AND USERPW = #{userpw}
	</select>

	<select id="checkId" parameterType="string" resultType="_int">
		SELECT count(*) FROM "USER" WHERE USERID = #{userid}
	</select>
	
	<select id="userIsLogin" parameterType="string" resultType="userdto">
		SELECT * FROM "USER" WHERE userid = #{userid}
	</select>
	
	
</mapper>
